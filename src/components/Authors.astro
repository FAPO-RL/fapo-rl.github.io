---
import type { Author } from "../types/types";

interface Props {
  authors: Author[];
}

const { authors } = Astro.props;
---

<div class="flex flex-wrap justify-center gap-x-8 gap-y-4 w-full max-w-5xl mx-auto">
  {authors.map((author, index) => (
    <div class="flex flex-col items-center text-center w-full sm:w-1/4 break-words">
      <span class="text-xl flex flex-row items-center justify-center">
        {author.url ? (
          <a href={author.url}>{author.name}</a>
        ) : (
          author.name
        )}
        {author.notes && (
          <sup class="text-xl">
            {author.notes.map((note, i, arr) => note + (i < arr.length - 1 ? "," : ""))}
          </sup>
        )}
      </span>
      {author.institution && <p>{author.institution}</p>}
      {author.email && <p class="text-sm text-zinc-600 dark:text-zinc-400 break-words">{author.email}</p>}
    </div>
  ))}
</div>

